{
  "name": "altwiener-ostermarkt",
  "version": "0.0.1", 
  "engines": {
    "node": "6.9.1"
  },
  "description": "The official website of the eastermarket at the Freyung in Vienna",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "npm run clean && mkdir dist && npm run server:views:dev && npm run server:compile && npm run client:sass && npm run client:ts && (npm run server:compile:watch & npm run client:sass:watch & npm run server:start)",
    "server:start": "node_modules/nodemon/bin/nodemon.js dist/app.js --config config/nodemon.json",
    "server:compile": "node_modules/typescript/bin/tsc -p ./server/tsconfig.json",
    "server:compile:watch": "npm run server:compile -- -w",
    "server:assets": "cp -R server/public dist",
    "server:views": "cp -R server/views dist",
    "server:views:dev": "ln -s ../server/views dist/views",
    "client:sass": "node_modules/node-sass/bin/node-sass --source-map true --output-style nested --output dist/public/assets client ",
    "client:sass:watch": "npm run client:sass -- -w",
    "client:ts": "node_modules/webpack/bin/webpack.js --config config/webpack.dev.js --progress --profile --bail",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "node_modules/tslint/bin/tslint -c ./tslint.json 'server/**/*.ts'",
    "lint:styles": "node_modules/stylelint/bin/stylelint.js client/**/*.scss --config .stylelintrc.json --syntax scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/altwiener-markt/ostermarkt.git"
  },
  "author": "Lukas Holzer <office@lukasholzer.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/altwiener-markt/ostermarkt/issues"
  },
  "homepage": "https://github.com/altwiener-markt/ostermarkt#readme",
  "devDependencies": {
    "awesome-typescript-loader": "^3.0.4",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.5.4",
    "stylelint": "^7.8.0",
    "tslint": "^4.4.2",
    "typescript": "^2.1.6",
    "webpack": "^2.2.1",
    "webpack-merge": "^2.6.1"
  },
  "dependencies": {
    "@types/chalk": "^0.4.31",
    "@types/form-data": "0.0.32",
    "@types/koa": "^2.0.34",
    "@types/koa-bodyparser": "^3.0.20",
    "@types/koa-router": "^7.0.21",
    "@types/node": "^6.0.48",
    "chalk": "^1.1.3",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.1.0",
    "koa-router": "^7.0.1",
    "core-js": "^2.4.1",
    "mojiito-core": "^2.0.0-alpha.3-6238cef",
    "mojiito-platform-browser": "^2.0.0-alpha.3-6238cef"
  }
}
